<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Logo or app name -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"/>

    <!-- Email input field -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp"
        android:layout_below="@id/logoImageView"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Password input field -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:layout_below="@id/emailEditText"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Sign in button -->
    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_marginTop="16dp"
        android:layout_below="@id/passwordEditText"
        android:layout_centerHorizontal="true"/>

    <!-- Forgot password link -->
    <TextView
        android:id="@+id/forgotPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:layout_marginTop="16dp"
        android:layout_below="@id/signInButton"
        android:layout_centerHorizontal="true"/>

    <!-- Sign up link -->
    <TextView
        android:id="@+id/signUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="16dp"
        android:layout_below="@id/forgotPasswordTextView"
        android:layout_centerHorizontal="true"/>

    <!-- Social media login options (e.g., Google, Facebook) -->
    <LinearLayout
        android:id="@+id/socialMediaLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_below="@id/signUpTextView"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/googleLoginImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google_icon"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/facebookLoginImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook_icon"/>

    </LinearLayout>
</RelativeLayout>

